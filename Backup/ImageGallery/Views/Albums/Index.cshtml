@model IEnumerable<RozichMurals.Web.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            ThumbImage
        </th>
        <th>
            OrderNumber
        </th>
        <th>
            Category
        </th>
        <th>
            Images
        </th>
        <th>
            Description
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.ThumbImage
        </td>
        <td>
			@item.OrderNumber
        </td>
        <td>
			@(item.Category == null ? "None" : item.Category.Name)
        </td>
        <td>
			@(item.Images == null ? "None" : item.Images.Count.ToString())
        </td>
        <td>
			@item.Description
        </td>
    </tr>
}

</table>


